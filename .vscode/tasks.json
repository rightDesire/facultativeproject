{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run",
      "type": "shell",
      "command": "make run",
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "wire",
      "type": "shell",
      "command": "make wire",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "migrate-new",
      "type": "shell",
      "command": "make migrate-new NAME=${input:migrationName}",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "migrate",
      "type": "shell",
      "command": "make migrate",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "migrate-down",
      "type": "shell",
      "command": "make migrate-down",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Введите имя миграции",
      "default": "create_new_migration"
